version: "3.9"
services:
  backend:
    build: ./backend
    volumes:
      - ./backend:/home/appuser
    command: ["gunicorn", "--bind", "0.0.0.0:8000", "--reload", "gamefinder:create_app()", "--access-logfile", "-"]
  frontend:
    build: ./frontend
    volumes:
      - ./frontend:/app
    command: npm run dev -- --host
  nginx:
    build: ./nginx
